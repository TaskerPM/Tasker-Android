<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog"
        android:minWidth="342dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/font_pretendard_medium_500"
            android:gravity="center"
            android:text="@string/unsaved_changes_dialog_title"
            android:textColor="@color/gray_900"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/font_pretendard_regular_400"
            android:gravity="center"
            android:text="@string/unsaved_changes_dialog_subtitle"
            android:textColor="@color/gray_500"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/unsaved_changes_dialog_save"
                android:textColor="@color/gray_400"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dialog_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/unsaved_changes_dialog_go_back"
                android:textColor="@color/red_error"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>
</layout>