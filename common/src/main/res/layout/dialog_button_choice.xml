<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_white_r16"
        android:minWidth="343dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_button_choice_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/font_pretendard_medium_500"
            android:gravity="center"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            tools:text="@string/button_choice_dialog_title" />

        <TextView
            android:id="@+id/tv_button_choice_dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="11dp"
            android:fontFamily="@font/font_pretendard_regular_400"
            android:gravity="center"
            android:textColor="@color/gray_500"
            android:textSize="14sp"
            tools:text="@string/button_choice_dialog_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_button_choice_dialog_left_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/gray_400"
                android:textSize="15sp"
                tools:text="@string/button_choice_dialog_save" />

            <TextView
                android:id="@+id/tv_button_choice_dialog_right_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/red_error"
                android:textSize="15sp"
                tools:text="@string/button_choice_dialog_go_back" />

        </LinearLayout>
    </LinearLayout>
</layout>